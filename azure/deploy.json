{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json",
    "contentVersion": "1.49.0.0",
    "parameters": {
        "containerName": {
            "type": "string",
            "maxLength": 63,
            "minLength": 6,
            "defaultValue": "Docker Http Server"
        },
        "CloudFlareAccountGlobalKey":{
            "type": "securestring",
            "metadata": {
                "description": "Get token in account settings: https://dash.cloudflare.com/profile/api-tokens"
            }
        },
        "CloudFlareAccountE-Mail": {
            "type": "string",
            "metadata": {
                "description": "login email for cloudflare account, example example@hotmail.com"
            }
        },
        "Domains":{
            "type": "string",
            "metadata": {
                "description": "Example: example.com files.example.com f.example.com"
            }
        },
        "EnableBackup": {
            "type": "bool",
            "metadata": {
                "description": "Activate the backup of the files in Google Drive, if activated you will have to go in the log container to get the google authentication link"
            }
        },
        "EnableCrontab": {
            "type": "string",
            "allowedValues": [
                "true",
                "false"
            ]
        },
        "CrontabBackupTime": {
            "type": "string",
            "defaultValue": "* 0 */2 * *",
            "allowedValues": [
                "* 0 */2 * *",
                "* 0 * * *",
                "* 0 */6 * *",
                "* 0 * * */2",
                "* 0 * * */3",
                "* 23 * * *"
            ]
        },
        "AdminUser": {
            "type": "string",
            "minLength": 6,
            "maxLength": 32,
            "defaultValue": "adminuser"
        },
        "AdminPass": {
            "type": "securestring",
            "minLength": 8,
            "maxLength": 28
        },
        "numberCpuCores": {
            "type": "string",
            "defaultValue": "2",
            "allowedValues": ["2","4"]
        },
        "RamMemory": {
            "type": "string",
            "allowedValues": ["4","6","8","10"],
            "defaultValue": "4"
        }
    },
    "variables": {
        "files": "files",
        "ssl": "ssl",
        "Config": "configs",
        "StorageName": "[concat('files', uniqueString(resourceGroup().id))]",
        "DnsName": "[concat('files-', uniqueString(resourceGroup().id))]",
        "bds_ports": [
            {
                "port": "80",
                "protocol": "TCP"
            },
            {
                "port": "443",
                "protocol": "TCP"
            },
            {
                "port": "445",
                "protocol": "TCP"
            },
            {
                "port": "6899",
                "protocol": "TCP"
            },
            {
                "port": "22",
                "protocol": "TCP"
            },
            {
                "port": "2544",
                "protocol": "TCP"
            }
        ]
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "[variables('StorageName')]",
            "location": "[resourceGroup().location]",
            "kind": "StorageV2",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "properties": {
                "accessTier": "Hot",
                "allowBlobPublicAccess": true,
                "allowSharedKeyAccess": true,
                "supportsHttpsTrafficOnly": false,
                "minimumTlsVersion": "TLS1_1",
                "largeFileSharesState": "Enabled"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2019-06-01",
            "name": "[concat(variables('StorageName'), '/default/', variables('files'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('StorageName'))]"
            ]
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2019-06-01",
            "name": "[concat(variables('StorageName'), '/default/', variables('Config'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('StorageName'))]"
            ],
            "properties": {
                "shareQuota": "[int('4')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2019-06-01",
            "name": "[concat(variables('StorageName'), '/default/', variables('ssl'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('StorageName'))]"
            ],
            "properties": {
                "shareQuota": "[int('1')]"
            }
        },
        {
            "location": "[resourceGroup().location]",
            "name": "[parameters('containerName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/fileServices/shares', variables('StorageName'),  'default',  variables('files') )]",
                "[resourceId('Microsoft.Storage/storageAccounts/fileServices/shares', variables('StorageName'),  'default',  variables('Config') )]",
                "[resourceId('Microsoft.Storage/storageAccounts/fileServices/shares', variables('StorageName'),  'default',  variables('ssl') )]"
            ],
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2019-12-01",
            "properties": {
                "containers": [
                    {
                        "name": "http-server",
                        "properties": {
                            "image": "sirherobrine23/http_server:latest",
                            "resources": {
                                "requests": {
                                    "cpu": "[int(parameters('numberCpuCores'))]",
                                    "memoryInGB": "[float(parameters('RamMemory'))]"
                                }
                            },
                            "ports": "[variables('bds_ports')]",
                            "environmentVariables": [
                                {
                                    "name": "CF_Key",
                                    "value": "[parameters('CloudFlareAccountGlobalKey')]"
                                },
                                {
                                    "name": "CF_Email",
                                    "value": "[parameters('CloudFlareAccountE-Mail')]"
                                },
                                {
                                    "name": "DOMAIN",
                                    "value": "[parameters('Domains')]"
                                },
                                {
                                    "name": "ADMIN_USERNAME",
                                    "value": "[parameters('AdminUser')]"
                                },
                                {
                                    "name": "ADMIN_PASSWORD",
                                    "secureValue": "[parameters('AdminPass')]"
                                },
                                {
                                    "name": "BACKUP_ENABLE",
                                    "value": "[parameters('EnableCrontab')]"
                                },
                                {
                                    "name": "CRONTAB_BACKUP_TIME",
                                    "value": "[parameters('CrontabBackupTime')]"
                                }
                            ],
                            "volumeMounts": [
                                {
                                "name": "files",
                                "mountPath": "/home/http/"
                                },
                                {
                                "name": "con",
                                "mountPath": "/home/config"
                                },
                                {
                                "name": "ssl",
                                "mountPath": "/home/ssl/"
                                }
                            ]
                        }
                    }
                ],
                "restartPolicy": "OnFailure",
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": "[variables('bds_ports')]",
                    "dnsNameLabel": "[variables('DnsName')]"
                },
                "volumes": [
                    {
                        "name": "files",
                        "azureFile": {
                            "shareName": "[variables('files')]",
                            "StorageAccountName": "[variables('StorageName')]",
                            // https://stackoverflow.com/a/33227123
                            "storageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[1].value]"
                        }
                    },
                    {
                        "name": "ssl",
                        "azureFile": {
                            "shareName": "[variables('ssl')]",
                            "StorageAccountName": "[variables('StorageName')]",
                            // https://stackoverflow.com/a/33227123
                            "storageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[1].value]"
                        }
                    },
                    { 
                        "name": "con",
                        "azureFile": {
                            "shareName": "[variables('Config')]",
                            "StorageAccountName": "[variables('StorageName')]",
                            // https://stackoverflow.com/a/33227123
                            "storageAccountKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('StorageName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[1].value]"
                        }
                    }
                ]
            },
            "tags": {}
        }
    ]
}